<!DOCTYPE html>
<html>
	<head>
		<title>
			User Information
		</title>
	</head>
	<body>
		<div id="container">
			<h1>
				user information
			</h1>
			<img id="user" src="Leksi.jpg" width="400px"/>
			<br>
			name: <%= @user.fname %> <%= @user.lname %>
			<br>
			email: <%= @user.email %>
			<br>
			<br>
			<div id="profile">
				<h2>
					Profile
				</h2>
				<br>
				gender: <%= @profile.gender %>
				<br>
				birthday: <%= @profile.birthday %>
				<br>
				city: <%= @profile.city %>
				<br>
				religion: <%= @profile.religion %>
				<br>
				education: <%= @profile.education %>
				<br>
				job: <%= @profile.job %>
